            "surah": 68,
            "nomor": 14,
            "ar": "\u0627\u064e\u0646\u0652 \u0643\u064e\u0627\u0646\u064e \u0630\u064e\u0627 \u0645\u064e\u0627\u0644\u064d \u0648\u0651\u064e\u0628\u064e\u0646\u0650\u064a\u0652\u0646\u064e\u06d7",
