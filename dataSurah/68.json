            "surah": 68,
            "nomor": 5,
            "ar": "\u0641\u064e\u0633\u064e\u062a\u064f\u0628\u0652\u0635\u0650\u0631\u064f \u0648\u064e\u064a\u064f\u0628\u0652\u0635\u0650\u0631\u064f\u0648\u0652\u0646\u064e\u06d9",
            "tr": "fasatub<u>sh</u>iru wayub<u>sh</u>iruun<strong>a</strong>",
