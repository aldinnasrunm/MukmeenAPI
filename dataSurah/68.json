        {
            "id": 5278,
            "surah": 68,
            "nomor": 7,
            "ar": "\u0627\u0650\u0646\u0651\u064e \u0631\u064e\u0628\u0651\u064e\u0643\u064e \u0647\u064f\u0648\u064e \u0627\u064e\u0639\u0652\u0644\u064e\u0645\u064f \u0628\u0650\u0645\u064e\u0646\u0652 \u0636\u064e\u0644\u0651\u064e \u0639\u064e\u0646\u0652 \u0633\u064e\u0628\u0650\u064a\u0652\u0644\u0650\u0647\u0656\u06d6 \u0648\u064e\u0647\u064f\u0648\u064e \u0627\u064e\u0639\u0652\u0644\u064e\u0645\u064f \u0628\u0650\u0627\u0644\u0652\u0645\u064f\u0647\u0652\u062a\u064e\u062f\u0650\u064a\u0652\u0646\u064e ",
