        {
            "id": 5282,
            "surah": 68,
            "nomor": 11,
            "ar": "\u0647\u064e\u0645\u0651\u064e\u0627\u0632\u064d \u0645\u0651\u064e\u0634\u0651\u064e\u0627\u06e4\u0621\u064d\u06e2 \u0628\u0650\u0646\u064e\u0645\u0650\u064a\u0652\u0645\u064d\u06d9",
            "tr": "hamm<u>aa</u>zin masysy<u>aa</u>-in binamiim<strong>in</strong>",
