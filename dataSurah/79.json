        },
        {
            "id": 5715,
            "surah": 79,
            "nomor": 3,
            "ar": "\u0648\u0651\u064e\u0627\u0644\u0633\u0651\u0670\u0628\u0650\u062d\u0670\u062a\u0650 \u0633\u064e\u0628\u0652\u062d\u064b\u0627\u06d9",
            "tr": "wa<strong>al</strong>ss<u>aa</u>bi<u>haa</u>ti sab<u>haa</u><strong>n</strong>",
