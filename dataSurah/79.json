            "surah": 79,
            "nomor": 2,
            "ar": "\u0648\u0651\u064e\u0627\u0644\u0646\u0651\u0670\u0634\u0650\u0637\u0670\u062a\u0650 \u0646\u064e\u0634\u0652\u0637\u064b\u0627\u06d9",
            "tr": "wa<strong>al</strong>nn<u>aa</u>syi<u>th</u><u>aa</u>ti nasy<u>th</u><u>aa</u><strong>n</strong>",
