        },
        {
            "id": 6000,
            "surah": 89,
            "nomor": 7,
            "ar": "\u0627\u0650\u0631\u064e\u0645\u064e \u0630\u064e\u0627\u062a\u0650 \u0627\u0644\u0652\u0639\u0650\u0645\u064e\u0627\u062f\u0650\u06d6",
