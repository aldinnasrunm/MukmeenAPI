        },
        {
            "id": 6001,
            "surah": 89,
            "nomor": 8,
            "ar": "\u0627\u0644\u0651\u064e\u062a\u0650\u064a\u0652 \u0644\u064e\u0645\u0652 \u064a\u064f\u062e\u0652\u0644\u064e\u0642\u0652 \u0645\u0650\u062b\u0652\u0644\u064f\u0647\u064e\u0627 \u0641\u0650\u0649 \u0627\u0644\u0652\u0628\u0650\u0644\u064e\u0627\u062f\u0650\u06d6",
            "tr": "<strong>al</strong>latii lam yukhlaq mitsluh<u>aa</u> fii <strong>a</strong>lbil<u>aa</u>d<strong>i</strong>",
            "idn": "yang belum pernah dibangun (suatu kota) seperti itu di negeri-negeri lain,"
        },
        {
            "id": 6002,
            "surah": 89,
            "nomor": 9,
            "ar": "\u0648\u064e\u062b\u064e\u0645\u064f\u0648\u0652\u062f\u064e \u0627\u0644\u0651\u064e\u0630\u0650\u064a\u0652\u0646\u064e \u062c\u064e\u0627\u0628\u064f\u0648\u0627 \u0627\u0644\u0635\u0651\u064e\u062e\u0652\u0631\u064e \u0628\u0650\u0627\u0644\u0652\u0648\u064e\u0627\u062f\u0650\u06d6",
            "tr": "watsamuuda <strong>al</strong>la<u>dz</u>iina j<u>aa</u>buu <strong>al</strong><u>shsh</u>akhra bi<strong>a</strong>lw<u>aa</u>d<strong>i</strong>",
            "idn": "dan (terhadap) kaum samud yang memotong batu-batu besar di lembah,"
        },
        {
            "id": 6003,
            "surah": 89,
            "nomor": 10,
            "ar": "\u0648\u064e\u0641\u0650\u0631\u0652\u0639\u064e\u0648\u0652\u0646\u064e \u0630\u0650\u0649 \u0627\u0644\u0652\u0627\u064e\u0648\u0652\u062a\u064e\u0627\u062f\u0650\u06d6",
            "tr": "wafir'awna <u>dz</u>ii <strong>a</strong>l-awt<u>aa</u>d<strong>i</strong>",
            "idn": "dan (terhadap) Fir\u2018aun yang mempunyai pasak-pasak (bangunan yang besar),"
        },
        {
            "id": 6004,
            "surah": 89,
            "nomor": 11,
            "ar": "\u0627\u0644\u0651\u064e\u0630\u0650\u064a\u0652\u0646\u064e \u0637\u064e\u063a\u064e\u0648\u0652\u0627 \u0641\u0650\u0649 \u0627\u0644\u0652\u0628\u0650\u0644\u064e\u0627\u062f\u0650\u06d6",
            "tr": "<strong>al</strong>la<u>dz</u>iina <u>th</u>aghaw fii <strong>a</strong>lbil<u>aa</u>d<strong>i</strong>",
            "idn": "yang berbuat sewenang-wenang dalam negeri,"
        },
        {
            "id": 6005,
            "surah": 89,
            "nomor": 12,
            "ar": "\u0641\u064e\u0627\u064e\u0643\u0652\u062b\u064e\u0631\u064f\u0648\u0652\u0627 \u0641\u0650\u064a\u0652\u0647\u064e\u0627 \u0627\u0644\u0652\u0641\u064e\u0633\u064e\u0627\u062f\u064e\u06d6",
            "tr": "fa-aktsaruu fiih<u>aa</u> <strong>a</strong>lfas<u>aa</u>d<strong>a</strong>",
            "idn": "lalu mereka banyak berbuat kerusakan dalam negeri itu,"
        },
        {
            "id": 6006,
            "surah": 89,
            "nomor": 13,
            "ar": "\u0641\u064e\u0635\u064e\u0628\u0651\u064e \u0639\u064e\u0644\u064e\u064a\u0652\u0647\u0650\u0645\u0652 \u0631\u064e\u0628\u0651\u064f\u0643\u064e \u0633\u064e\u0648\u0652\u0637\u064e \u0639\u064e\u0630\u064e\u0627\u0628\u064d\u06d6",
            "tr": "fa<u>sh</u>abba 'alayhim rabbuka saw<u>th</u>a 'a<u>dzaa</u>b<strong>in</strong>",
            "idn": "karena itu Tuhanmu menimpakan cemeti azab kepada mereka,"
        },
        {
            "id": 6007,
            "surah": 89,
            "nomor": 14,
            "ar": "\u0627\u0650\u0646\u0651\u064e \u0631\u064e\u0628\u0651\u064e\u0643\u064e \u0644\u064e\u0628\u0650\u0627\u0644\u0652\u0645\u0650\u0631\u0652\u0635\u064e\u0627\u062f\u0650\u06d7",
            "tr": "inna rabbaka labi<strong>a</strong>lmir<u>shaa</u>d<strong>i</strong>",
            "idn": "sungguh, Tuhanmu benar-benar mengawasi."
        },
        {
            "id": 6008,
            "surah": 89,
            "nomor": 15,
            "ar": "\u0641\u064e\u0627\u064e\u0645\u0651\u064e\u0627 \u0627\u0644\u0652\u0627\u0650\u0646\u0652\u0633\u064e\u0627\u0646\u064f \u0627\u0650\u0630\u064e\u0627 \u0645\u064e\u0627 \u0627\u0628\u0652\u062a\u064e\u0644\u0670\u0649\u0647\u064f \u0631\u064e\u0628\u0651\u064f\u0647\u0657 \u0641\u064e\u0627\u064e\u0643\u0652\u0631\u064e\u0645\u064e\u0647\u0657 \u0648\u064e\u0646\u064e\u0639\u0651\u064e\u0645\u064e\u0647\u0657\u06d9 \u0641\u064e\u064a\u064e\u0642\u064f\u0648\u0652\u0644\u064f \u0631\u064e\u0628\u0651\u0650\u064a\u0652\u0653 \u0627\u064e\u0643\u0652\u0631\u064e\u0645\u064e\u0646\u0650\u06d7",
            "tr": "fa-amm<u>aa</u> <strong>a</strong>l-ins<u>aa</u>nu i<u>dzaa</u> m<u>aa</u> ibtal<u>aa</u>hu rabbuhu fa-akramahu wana''amahu fayaquulu rabbii akraman<strong>i</strong>",
            "idn": "Maka adapun manusia, apabila Tuhan mengujinya lalu memuliakannya dan memberinya kesenangan, maka dia berkata, \u201cTuhanku telah memuliakanku.\u201d"
        },
        {
            "id": 6009,
            "surah": 89,
            "nomor": 16,
            "ar": "\u0648\u064e\u0627\u064e\u0645\u0651\u064e\u0627\u0653 \u0627\u0650\u0630\u064e\u0627 \u0645\u064e\u0627 \u0627\u0628\u0652\u062a\u064e\u0644\u0670\u0649\u0647\u064f \u0641\u064e\u0642\u064e\u062f\u064e\u0631\u064e \u0639\u064e\u0644\u064e\u064a\u0652\u0647\u0650 \u0631\u0650\u0632\u0652\u0642\u064e\u0647\u0657 \u06d5\u06d9 \u0641\u064e\u064a\u064e\u0642\u064f\u0648\u0652\u0644\u064f \u0631\u064e\u0628\u0651\u0650\u064a\u0652\u0653 \u0627\u064e\u0647\u064e\u0627\u0646\u064e\u0646\u0650\u06da",
            "tr": "wa-amm<u>aa</u> i<u>dzaa</u> m<u>aa</u> ibtal<u>aa</u>hu faqadara 'alayhi rizqahu fayaquulu rabbii ah<u>aa</u>nan<strong>i</strong>",
            "idn": "Namun apabila Tuhan mengujinya lalu membatasi rezekinya, maka dia berkata, \u201cTuhanku telah menghinaku.\u201d"
        },
        {
            "id": 6010,
            "surah": 89,
            "nomor": 17,
            "ar": "\u0643\u064e\u0644\u0651\u064e\u0627 \u0628\u064e\u0644\u0652 \u0644\u0651\u064e\u0627 \u062a\u064f\u0643\u0652\u0631\u0650\u0645\u064f\u0648\u0652\u0646\u064e \u0627\u0644\u0652\u064a\u064e\u062a\u0650\u064a\u0652\u0645\u064e\u06d9",
            "tr": "kall<u>aa</u> bal l<u>aa</u> tukrimuuna <strong>a</strong>lyatiim<strong>a</strong>",
            "idn": "Sekali-kali tidak! Bahkan kamu tidak memuliakan anak yatim,"
        },
        {
            "id": 6011,
            "surah": 89,
            "nomor": 18,
            "ar": "\u0648\u064e\u0644\u064e\u0627 \u062a\u064e\u062d\u0670\u06e4\u0636\u0651\u064f\u0648\u0652\u0646\u064e \u0639\u064e\u0644\u0670\u0649 \u0637\u064e\u0639\u064e\u0627\u0645\u0650 \u0627\u0644\u0652\u0645\u0650\u0633\u0652\u0643\u0650\u064a\u0652\u0646\u0650\u06d9",
            "tr": "wal<u>aa</u> ta<u>hadd</u>uuna 'al<u>aa</u> <u>th</u>a'<u>aa</u>mi <strong>a</strong>lmiskiin<strong>i</strong>",
            "idn": "dan kamu tidak saling mengajak memberi makan orang miskin,"
        },
        {
            "id": 6012,
            "surah": 89,
            "nomor": 19,
            "ar": "\u0648\u064e\u062a\u064e\u0623\u0652\u0643\u064f\u0644\u064f\u0648\u0652\u0646\u064e \u0627\u0644\u062a\u0651\u064f\u0631\u064e\u0627\u062b\u064e \u0627\u064e\u0643\u0652\u0644\u064b\u0627 \u0644\u0651\u064e\u0645\u0651\u064b\u0627\u06d9",
            "tr": "wata/kuluuna <strong>al</strong>ttur<u>aa</u>tsa aklan lamm<u>aa</u><strong>n</strong>",
            "idn": "sedangkan kamu memakan harta warisan dengan cara mencampurbaurkan (yang halal dan yang haram),"
        },
        {
            "id": 6013,
            "surah": 89,
            "nomor": 20,
            "ar": "\u0648\u0651\u064e\u062a\u064f\u062d\u0650\u0628\u0651\u064f\u0648\u0652\u0646\u064e \u0627\u0644\u0652\u0645\u064e\u0627\u0644\u064e \u062d\u064f\u0628\u0651\u064b\u0627 \u062c\u064e\u0645\u0651\u064b\u0627\u06d7",
            "tr": "watu<u>h</u>ibbuuna <strong>a</strong>lm<u>aa</u>la <u>h</u>ubban jamm<u>aa</u><strong>n</strong>",
            "idn": "dan kamu mencintai harta dengan kecintaan yang berlebihan."
        },
        {
            "id": 6014,
            "surah": 89,
            "nomor": 21,
            "ar": "\u0643\u064e\u0644\u0651\u064e\u0627\u0653 \u0627\u0650\u0630\u064e\u0627 \u062f\u064f\u0643\u0651\u064e\u062a\u0650 \u0627\u0644\u0652\u0627\u064e\u0631\u0652\u0636\u064f \u062f\u064e\u0643\u0651\u064b\u0627 \u062f\u064e\u0643\u0651\u064b\u0627\u06d9",
            "tr": "kall<u>aa</u> i<u>dzaa</u> dukkati <strong>a</strong>l-ar<u>dh</u>u dakkan dakk<u>aa</u><strong>n</strong>",
            "idn": "Sekali-kali tidak! Apabila bumi diguncangkan berturut-turut (berbenturan),"
        },
        {
            "id": 6015,
            "surah": 89,
            "nomor": 22,
            "ar": "\u0648\u0651\u064e\u062c\u064e\u0627\u0653\u0621\u064e \u0631\u064e\u0628\u0651\u064f\u0643\u064e \u0648\u064e\u0627\u0644\u0652\u0645\u064e\u0644\u064e\u0643\u064f \u0635\u064e\u0641\u0651\u064b\u0627 \u0635\u064e\u0641\u0651\u064b\u0627\u06da",
            "tr": "waj<u>aa</u>-a rabbuka wa<strong>a</strong>lmalaku <u>sh</u>affan <u>sh</u>aff<u>aa</u><strong>n</strong>",
            "idn": "dan datanglah Tuhanmu; dan malaikat berbaris-baris,"
        },
        {
            "id": 6016,
            "surah": 89,
            "nomor": 23,
            "ar": "\u0648\u064e\u062c\u0650\u0627\u064a\u0652\u06e4\u0621\u064e \u064a\u064e\u0648\u0652\u0645\u064e\u0649\u0655\u0650\u0630\u064d\u06e2 \u0628\u0650\u062c\u064e\u0647\u064e\u0646\u0651\u064e\u0645\u064e\u06d9 \u064a\u064e\u0648\u0652\u0645\u064e\u0649\u0655\u0650\u0630\u064d \u064a\u0651\u064e\u062a\u064e\u0630\u064e\u0643\u0651\u064e\u0631\u064f \u0627\u0644\u0652\u0627\u0650\u0646\u0652\u0633\u064e\u0627\u0646\u064f \u0648\u064e\u0627\u064e\u0646\u0651\u0670\u0649 \u0644\u064e\u0647\u064f \u0627\u0644\u0630\u0651\u0650\u0643\u0652\u0631\u0670\u0649\u06d7",
            "tr": "wajii-a yawma-i<u>dz</u>in bijahannama yawma-i<u>dz</u>in yata<u>dz</u>akkaru <strong>a</strong>l-ins<u>aa</u>nu wa-ann<u>aa</u> lahu <strong>al</strong><u>dzdz</u>ikr<u>aa</u>",
            "idn": "dan pada hari itu diperlihatkan neraka Jahanam; pada hari itu sadarlah manusia, tetapi tidak berguna lagi baginya kesadaran itu."
        },
        {
            "id": 6017,
            "surah": 89,
            "nomor": 24,
            "ar": "\u064a\u064e\u0642\u064f\u0648\u0652\u0644\u064f \u064a\u0670\u0644\u064e\u064a\u0652\u062a\u064e\u0646\u0650\u064a\u0652 \u0642\u064e\u062f\u0651\u064e\u0645\u0652\u062a\u064f \u0644\u0650\u062d\u064e\u064a\u064e\u0627\u062a\u0650\u064a\u0652\u06da",
            "tr": "yaquulu y<u>aa</u> laytanii qaddamtu li<u>h</u>ay<u>aa</u>tii",
            "idn": "Dia berkata, \u201cAlangkah baiknya sekiranya dahulu aku mengerjakan (kebajikan) untuk hidupku ini.\u201d"
        },
        {
            "id": 6018,
            "surah": 89,
            "nomor": 25,
            "ar": "\u0641\u064e\u064a\u064e\u0648\u0652\u0645\u064e\u0649\u0655\u0650\u0630\u064d \u0644\u0651\u064e\u0627 \u064a\u064f\u0639\u064e\u0630\u0651\u0650\u0628\u064f \u0639\u064e\u0630\u064e\u0627\u0628\u064e\u0647\u0657\u0653 \u0627\u064e\u062d\u064e\u062f\u064c \u06d9",
            "tr": "fayawma-i<u>dz</u>in l<u>aa</u> yu'a<u>dzdz</u>ibu 'a<u>dzaa</u>bahu a<u>h</u>ad<strong>un</strong>",
            "idn": "Maka pada hari itu tidak ada seorang pun yang mengazab seperti azab-Nya (yang adil),"
        },
        {
            "id": 6019,
            "surah": 89,
            "nomor": 26,
            "ar": "\u0648\u0651\u064e\u0644\u064e\u0627 \u064a\u064f\u0648\u0652\u062b\u0650\u0642\u064f \u0648\u064e\u062b\u064e\u0627\u0642\u064e\u0647\u0657\u0653 \u0627\u064e\u062d\u064e\u062f\u064c \u06d7",
            "tr": "wal<u>aa</u> yuutsiqu wats<u>aa</u>qahu a<u>h</u>ad<strong>un</strong>",
            "idn": "dan tidak ada seorang pun yang mengikat seperti ikatan-Nya."
        },
        {
            "id": 6020,
            "surah": 89,
            "nomor": 27,
            "ar": "\u064a\u0670\u0653\u0627\u064e\u064a\u0651\u064e\u062a\u064f\u0647\u064e\u0627 \u0627\u0644\u0646\u0651\u064e\u0641\u0652\u0633\u064f \u0627\u0644\u0652\u0645\u064f\u0637\u0652\u0645\u064e\u0649\u0655\u0650\u0646\u0651\u064e\u0629\u064f\u06d9",
            "tr": "y<u>aa</u> ayyatuh<u>aa</u> <strong>al</strong>nnafsu <strong>a</strong>lmu<u>th</u>ma-inna<strong>tu</strong>",
            "idn": "Wahai jiwa yang tenang!"
        },
        {
